{
  "name": "DnCNNRes_DIV2K" //  please remove "debug_" during formal training
  , "use_tb_logger": true
  , "model":"sr"
  , "scale": 1
  , "sigma": 0.020   //  for add gassian noise level
  , "gpu_ids": [7]

  , "datasets": {
    "train": {
      "name": "DIV2K"
      , "mode": "NoiseClean"
      , "dataroot_HR": "../../data/DIV2K_train_HR_sub"
      , "dataroot_LR": null
      , "generate_residual": true
      , "show_dataset_img": false
      , "subset_file": null
      , "use_shuffle": true
      , "n_workers": 8
      , "batch_size": 512
      , "HR_size": 32
      , "use_flip": true
      , "use_rot": true
    }
    , "val": {
      "name": "val_set5"
      , "mode": "NoiseClean"
      , "dataroot_HR": "../../data/Set5_mod"
      , "dataroot_LR": "../../data/Set5_mod_s20"
      , "generate_residual": true
      , "show_dataset_img": false
    }
  }

  , "path": {
    "root": "./"
    , "pretrain_model_G": null
  }

  , "network_G": {
    "which_model_G": "dn_cnn"
    , "norm_type": "batch"   //"batch", null
    , "mode": "CNA"
    , "nf": 64
    , "nb": 15
    , "in_nc": 3
    , "out_nc": 3
    , "group": 1
  }

  , "train": {
    "manual_seed": 0
    , "niter": 1e4

    , "lr_G": 1e-3
    , "lr_scheme": "MultiStepLR"
    , "lr_steps": [2000, 4000, 6000, 8000]
    , "lr_gamma": 0.5

    , "pixel_criterion": "l1"
    , "pixel_weight": 1.0
    , "val_freq": 1e1
  }

  , "logger": {
    "print_freq": 5
    , "save_checkpoint_freq": 1e2
  }
}
