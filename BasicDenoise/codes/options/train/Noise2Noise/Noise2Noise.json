{
  "name": "Noise2Noise_DIV2K" //  please remove "debug_" during formal training
  , "use_tb_logger": true
  , "model":"sr"
  , "scale": 1
  , "gpu_ids": [1]

  , "datasets": {
    "train": {
      "name": "DIV2K"
      , "mode": "LRHR"
      , "dataroot_HR": "../../data/DIV2k_train_HR_sub_bicLRx4_s20"
      , "dataroot_LR": "../../data/DIV2k_train_HR_sub_bicLRx4_s30"
      , "subset_file": null
      , "use_shuffle": true
      , "n_workers": 8
      , "batch_size": 512
      , "HR_size": 32
      , "use_flip": true
      , "use_rot": true
    }
    , "val": {
      "name": "val_set5"
      , "mode": "LRHR"
      , "dataroot_HR": "../../data/Set5_mod"
      , "dataroot_LR": "../../data/Set5_mod_s20"
    }
  }

  , "path": {
    "root": "./"
    , "pretrain_model_G": null
  }

  , "network_G": {
    "which_model_G": "dn_cnn"
    , "norm_type": null
    , "mode": "CNA"
    , "nf": 64
    , "nb": 8
    , "in_nc": 3
    , "out_nc": 3
    , "group": 1
  }

  , "train": {
    "manual_seed": 0
    , "niter": 1e5

    , "lr_G": 1e-3
    , "lr_scheme": "MultiStepLR"
    , "lr_steps": [2000, 4000, 8000, 16000]
    , "lr_gamma": 0.5

    , "pixel_criterion": "l1"
    , "pixel_weight": 1.0
    , "val_freq": 2e2
  }

  , "logger": {
    "print_freq": 2e1
    , "save_checkpoint_freq": 2e3
  }
}
