{
  "name": "pt4_SRResNetx4_DIV2K" //  please remove "debug_" during formal training
  , "use_tb_logger": false
  , "model":"sr"
  , "scale": 4
  , "gpu_ids": [1]

  , "datasets": {
    "train": {
      "name": "DIV2K"
      , "mode": "LRHR"
      , "dataroot_HR": "../../data/DIV2K_train_HR_sub"
      , "dataroot_LR": "../../data/DIV2k_train_HR_sub_bicLRx4"
      , "subset_file": null
      , "use_shuffle": true
      , "n_workers": 8
      , "batch_size": 120
      , "HR_size": 128
      , "use_flip": true
      , "use_rot": true
    }
    , "val": {
      "name": "val_set5"
      , "mode": "LRHR"
      , "dataroot_HR": "../../data/Set5_mod"
      , "dataroot_LR": "../../data/Set5_mod_bicLRx4"
    }
  }

  , "path": {
    "root": "./"
    , "pretrain_model_G": null
  }

  , "network_G": {
    "which_model_G": "sr_resnet"
    , "norm_type": null
    , "mode": "CNA"
    , "nf": 64
    , "nb": 16
    , "in_nc": 3
    , "out_nc": 3
    , "group": 1
  }

  , "train": {
    "manual_seed": 0
    , "niter": 1e4

    , "lr_G": 2e-4
    , "lr_scheme": "MultiStepLR"
    , "lr_steps": [2000, 4000, 6000, 8000]
    , "lr_gamma": 0.5

    , "pixel_criterion": "l1"
    , "pixel_weight": 1.0
    , "val_freq": 5e1
  }

  , "logger": {
    "print_freq": 10
    , "save_checkpoint_freq": 2e2
  }
}
